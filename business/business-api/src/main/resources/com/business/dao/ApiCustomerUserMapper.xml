            </if>
            <if test="mobile != null">
                `mobile` = #{mobile},
            </if>
            <if test="email != null">
                `email` = #{email},
            </if>
            <if test="wechat != null">
                `wechat` = #{wechat},
            </if>
            <if test="profile != null">
                `profile` = #{profile},
            </if>
            <if test="idcard != null">
                `idcard` = #{idcard},
            </if>
            <if test="avatar != null">
                `avatar` = #{avatar},
            </if>
            <if test="address != null">
                `address` = #{address},
            </if>
            <if test="telephone != null">
                `telephone` = #{telephone},
            </if>
            <if test="province != null">
                `province` = #{province},
            </if>
            <if test="city != null">
                `city` = #{city},
            </if>
            <if test="county != null">
                `county` = #{county},
            </if>
            <if test="weixin_openid != null">
                `weixin_openid` = #{weixin_openid},
            </if>
            <if test="qrCode != null">
                `qr_code` = #{qrCode}
            </if>
            <if test="createTime != null">
                `create_time` = #{createTime}
            </if>
        </set>
        where user_id = #{userId}
    </update>

    <update id="updateByOpenId" parameterType="com.business.entity.CustomerUserVo">
        update customer_user
        <set>
            <if test="companyId != null">
                `company_id` = #{companyId},
            </if>
            <if test="realname != null">
