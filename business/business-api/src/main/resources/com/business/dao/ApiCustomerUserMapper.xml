    <delete id="delete">
		delete from customer_user where user_id = #{value}
	</delete>

    <delete id="deleteBatch">
        delete from customer_user where user_id in
        <foreach item="userId" collection="array" open="(" separator="," close=")">
            #{userId}
        </foreach>
    </delete>
</mapper>