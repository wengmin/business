.add-user {
  background: #fff;
}

.add-user .add-form {
  width: 100%;
  z-index: 1;
  padding-left: 30rpx;
  font-size: 0;
  border-bottom: 1px solid #d9d9d9;
}

.add-user .form-item {
  border-bottom: 1px solid #d9d9d9;
  display: inline-block;
  align-items: center;
  padding: 20rpx 30rpx;
  padding-left: 0;
  width: 100%;
}

.add-user .form-item:last-child {
  border-bottom: none;
}

.form-item .radio {
  margin-right: 20rpx;
}

.form-item .ttext {
  float: left;
  display: block;
  width: 190rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.form-item .ttext text {
  color: red;
  line-height: 60rpx;
  margin-right: 10rpx;
}

.form-item .img {
  width: 230rpx;
  height: 300rpx;
  border-radius: 10rpx;
  margin: 0 auto;
}

.form-item .imgtext {
  text-align: center;
  width: 100%;
  height: 50rpx;
  clear: both;
}

.form-item .inputright {
  float: right;
  width: 500rpx;
  height: 60rpx;
  display: block;
  text-align: right;
}

.add-user .input_n {
  flex: 1;
  width: 650rpx;
  height: 200rpx;
  line-height: 44rpx;
  padding: 20rpx;
  overflow: hidden;
  text-align: left;
  border: solid 1rpx #d9d9d9;
}

.add-user .form-default {
  border-bottom: 1px solid #d9d9d9;
  height: 96rpx;
  background: #fafafa;
  padding-top: 28rpx;
  font-size: 28rpx;
}

.btns {
  overflow: hidden;
  display: flex;
  height: 130rpx;
  width: 100%;
  padding: 30rpx;
  background: #f5f5f5;
}

.save {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
  background: #52a936;
  font-size: 32rpx;
  color: #fff;
}

/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */

radio {
  float: right;
}

radio .wx-radio-input.wx-radio-input-checked {
  border-color: #52a936;
  background: #52a936;
}

/* 自定义样式.... */

radio .wx-radio-input {
  height: 50rpx;
  width: 50rpx;
  border-radius: 50%;
  border: 2rpx solid #999;
  background: transparent;
}

/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */

radio .wx-radio-input.wx-radio-input-checked::before {
  border-radius: 50%; /* 圆角 */
  width: 50rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  height: 50rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  line-height: 50rpx;
  text-align: center;
  font-size: 50rpx; /* 对勾大小 30rpx */
  color: #fff; /* 对勾颜色 白色 */
  background: #52a936;
}
