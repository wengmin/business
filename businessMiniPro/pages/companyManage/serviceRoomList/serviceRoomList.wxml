<view class="container">
  <view class="status">
    <view wx:for="{{serviceStatusList}}" wx:key="index" class="item {{serviceStatus==item.value?'check':''}}" bindtap='statusCheck' data-value="{{item.value}}">
      {{item.name}}
    </view>
  </view>
  <navigator class="list" wx:for="{{serviceList}}" wx:key="index" open-type="navigate" url="/pages/companyManage/serviceRoom/serviceRoom?serviceId={{item.serviceId}}">
    <view class="font1">来自{{item.roomName}}</view>
    <view class="font1 font1class">
      {{item.serviceClass=="clean"?"清洁":item.serviceClass=="lease"?"物品租借":item.serviceClass=="repair"?"维修":item.serviceClass=="complaint"?"投诉":""}}
    </view>
    <view class="font1">{{item.serviceTag}}</view>
    <view class="font1" wx:if="{{item.serviceClass=='clean'}}">处理时间：{{item.appointmentTime}}</view>
    <view class="font1" wx:if="{{item.remark}}">{{item.remark}}</view>
    <view class="time">{{item.createTime}}</view>
    <view class="statustag">{{item.status==0?"未处理":item.status==1?"处理中":item.status==2?"已处理":""}}</view>
  </navigator>
  <view class="loading" wx:if="{{serviceList.length>0&&page<totalPage}}">正在载入更多...</view>
  <view class="loading complete" wx:if="{{serviceList.length>0&&page==totalPage}}">已加载全部</view>
  <view class="loading complete" wx:if="{{serviceList.length==0}}">暂无数据</view>
</view>