.itemarea {
  padding: 20rpx;
}

.itemtitle {
  text-align: left;
  width: 100%;
  height: 50rpx;
  display: inline-block;
}

.itemtitle .icon {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
}

.itemtitle text {
  height: 50rpx;
  line-height: 50rpx;
  vertical-align: middle;
  margin-left: 10rpx;
}

.itemtitle navigator {
  float: right;
  height: 50rpx;
  line-height: 50rpx;
}

.itembody {
  width: 100%;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  display: inline-block;
  text-align: left;
  border: solid 1rpx #e7e7e7;
}

.itembodyslide {
  white-space: nowrap;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
  position: relative;
  text-align: left;
}

.itembodyslide navigator {
  display: inline-block;
  padding: 20rpx;
  margin-top: 20rpx;
  margin-right: 20rpx;
  background-color: #fff;
  border-radius: 6rpx;
}

.itembodyslide navigator:last-child {
  margin-right: 0px;
}

.itembodyslide navigator image {
  width: 200rpx;
  height: 200rpx;
}

.itembodyslide navigator text {
  width: 200rpx;
  text-align: center;
  display: block;
}

.itembodyslide navigator .pos {
  font-size: 12px;
  color: rgba(110, 105, 105, 0.705);
  margin-top: 8px;
}

.comtop {
  display: inline-block;
  width: 100%;
  font-size: 0;
}

.comtop image {
  width: 100rpx;
  height: 100rpx;
  float: left;
  border-radius: 10rpx;
}

.comtop text {
  line-height: 100rpx;
  float: left;
  font-size: 29rpx;
  margin-left: 20rpx;
}

.comdesc {
  width: 100%;
  padding: 20rpx 0;
  border-top: solid 2rpx #c6c6c6;
  margin-top: 20rpx;
}

.comfile {
  width: 100%;
  padding: 0;
  margin: 0;
  border: solid 2rpx #e7e7e7;
  margin-top: 20rpx;
}
