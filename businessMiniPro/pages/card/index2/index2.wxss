.main {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100%;
  height: 100vh;
  transform: translate(-50%, -50%);
  /* //子元素获得透视效果  */
  -webkit-perspective: 1500;
  -moz-perspective: 1500;
}

.box {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  transition: all 1s;
  backface-visibility: hidden;
  /* border-radius: 10px; */
  cursor: pointer;
}

.box image {
  /* border-radius: 10px; */
  width: 100%;
  height: 100%;
}

.b1 {
  background-image: url(http://emiaoweb.com/business/statics/images/cardbg.png);
  background-size: 100% 100%;

}

.b2 {
  background-image: url(http://emiaoweb.com/business/statics/images/cardbg2.png);
  background-size: 100% 100%;
  transform: rotateY(180deg);
}

.b3 {
  /* background-image: url(http://emiaoweb.com/business/statics/images/shopbg.jpg); */
  background-size: 100% 100%;
  transform: rotateY(0deg);
}


.card {
  position: relative;
}

.card .top {
  position: absolute;
  top: 100rpx;
  width: 100%;
  height: 500rpx;
  text-align: center;
}

.card .top image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
}

.card .top .name {
  font-size: 35rpx;
  font-weight: bold;
  margin-top: 20rpx;
}

.card .middle {
  width: 100%;
  text-align: right;
  font-size: 50rpx;
  position: absolute;
  top: 400rpx;
  margin: 0 auto;
}

.card .middle image {
  width: 250rpx;
  height: 250rpx;
  border-radius: 10rpx;
  margin-top: 20rpx;
  margin-right: 70rpx;
}

.card .middle .name {
  height: 70rpx;
  line-height: 70rpx;
  color: #4d4a45;
  position: relative;
}

.card .middle .liner {
  width: 100%;
  height: 6rpx;
  background-color: #52a936;
  position: absolute;
  top: 50%;
}

.card .middle text {
  text-align: center;
  position: relative;
  z-index: 3;
  display: inline-block;
  margin-right: 70rpx;
  padding: 0 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 50rpx;
  background-color: #52a936;
  color: #fff;
}

.card .middle .position {
  padding-right: 70rpx;
  font-size: 16px;
  margin-top: 20rpx;
}

.card .bottom {
  width: 100%;
  text-align: left;
  font-size: 16px;
  position: absolute;
  bottom: 50rpx;
  line-height: 50rpx;
}

.card .bottom .call {
  height: 50rpx;
  margin-bottom: 10rpx;
}

.card .bottom .call image {
  width: 50rpx;
  height: 50rpx;
  float: left;
}

.card .bottom .call .info {
  line-height: 50rpx;
  display: block;
  float: left;
  margin-left: 10rpx;
}

.card .btnarea {
  width: 100%;
  padding: 0 60rpx;
  margin-top: 30rpx;
}
.card .btnarea .imgbtn {
  display: inline-block;
  vertical-align: top;
  padding: 10rpx;
  text-align: center;
  height: 100rpx;
  margin-right: 20rpx;
  background-color: #fff;
  border-radius: 3px;
  line-height: 0;
  border: solid 1rpx rgb(200, 200, 200);
  box-shadow: 2rpx 2rpx 5rpx 2rpx rgba(150, 150, 150, 0.363);
}
.card .btnarea .imgbtn image {
  width: 80rpx;
  height: 80rpx;
}


.imagePathBox {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
}

.qrcodebody {
  width: 600rpx;
  height: 1000rpx;
  position: relative;
  top: 15%;
  left: 0;
  right: 0;
  margin: 0 auto;
  background: #fff;
}

.qrcodeImg {
  width: 560rpx;
  height: 560rpx;
  position: absolute;
  top: 5%;
  left: 0;
  right: 0;
  margin: 0 auto;
  z-index: 10;
}

.savaQrCode {
  display: block;
  width: 80%;
  height: 80rpx;
  padding: 0;
  line-height: 80rpx;
  text-align: center;
  position: absolute;
  bottom: 150rpx;
  left: 10%;
  background: #52a936;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
}

.closeQrCode {
  display: block;
  width: 80%;
  height: 80rpx;
  padding: 0;
  line-height: 80rpx;
  text-align: center;
  position: absolute;
  bottom: 50rpx;
  left: 10%;
  background: #888887;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
}

button[class="closeQrCode"]::after {
  border: 0;
}




.com {
  width: 100%;
  padding: 50rpx;
  padding-top: 200rpx;
  text-align: left;
}

.com .name {
  font-size: 50rpx;
}

.com .desc {
  font-size: 32rpx;
  text-indent: 32rpx;
  margin-top: 50rpx;
  line-height: 50rpx;
}







.swiper-tab {
  width: 100%;
  white-space: nowrap;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
  border-bottom: 2rpx solid #da7c0c;
  text-align: center;
  line-height: 80rpx;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  padding: 0 15rpx;
  color: #777;
}

.good-grid {
  width: 750rpx;
  padding: 30rpx;
}

.good-grid .item {
  background: #fff;
  width: 100%;
  padding: 30rpx;
  margin-bottom: 6rpx;
  border-radius: 10rpx;
  border: solid 1rpx #ccc;
  display: inline-block;
}

.good-grid .item .img {
  float: left;
  width: 200rpx;
  height: 200rpx;
}

.good-grid .item .name {
  float: left;
  margin-left: 30rpx;
  text-align: center;
  font-size: 30rpx;
  color: #333;
}

.imgbg {
  width: 100%;
  position: relative;
  height: 200rpx;
  background-repeat: no-repeat;
  background-size: 100%;
  background-position: center center;
}

.imgbg .logo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  position: absolute;
  top: 70rpx;
  left: 30rpx;
}

.imgbg .name {
  width: auto;
  position: absolute;
  top: 70rpx;
  left: 150rpx;
  font-size: 36rpx;
  color: #333;
}

.lefticon{
  position: absolute;
  top: 50%;
  left: 10rpx;
  z-index: 999;
  width: 50rpx;
  height: 50rpx;
  animation: fade 1000ms infinite;
}

.righticon{
  position: absolute;
  top: 50%;
  right: 10rpx;
  z-index: 999;
  width: 50rpx;
  height: 50rpx;
  animation: fade 1000ms infinite;
}
@keyframes fade {
  from {
      opacity: 1.0;
  }
  50% {
      opacity: 0.5;
  }
  to {
      opacity: 1.0;
  }
}

@-webkit-keyframes fade {
  from {
      opacity: 1.0;
  }
  50% {
      opacity: 0.5;
  }
  to {
      opacity: 1.0;
  }
}