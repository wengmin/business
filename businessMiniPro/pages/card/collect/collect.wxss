.container{
  text-align: center
}
.itembody {
  width: 700rpx;
  clear: both;
  padding: 30rpx;
  background-color: #fff;
  display: inline-block;
  margin-top: 20rpx;
  border-radius: 10rpx; 
}

.itembody .avaimg{
  float: left;
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.itembody .info{
  float: right;
  width: 410rpx;
  height: 200rpx;
  text-align: left;
  position: relative
}

.itembody .info .name{
  position: absolute;
  top: 0;
  font-size: 36rpx;
}

.itembody .info .comname{
  position: absolute;
  top: 50rpx;
    /* top: 50%;
    transform: translateY(-50%); */
  vertical-align: middle;
  font-size: 28rpx;
}

.itembody .info .time{
  position: absolute;
  bottom: 0;
  font-size: 28rpx;
  color: #cccccc
}

.loading {
  color: rgb(7, 207, 207);
  width: 100%;
  text-align: center;
  padding: 30rpx 0;
}

.complete {
  color: #000;
}