page {
  height: 100%;
  width: 100%;
  background: #f5f5f5;
}

.container {
  background: #f5f5f5;
  height: auto;
  overflow: hidden;
  width: 100%;
}

.userinfo {
  display: flex;
  background: #fff;
  width: 750rpx;
}

.marleft {
  width: 550rpx;
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  position: relative;
}

.userinfo-avatar {
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx 0;
  border-radius: 50%;
  margin-left: 30rpx;
}

.userinfo-nickname {
  /* display: block; */
  color: #333;
  font-size: 18px;
  /* margin-top: 48rpx; */
  height: 50rpx;
  line-height: 50rpx;
  text-align: left;
}

.user-menu {
  width: 100%;
  height: auto;
  overflow: hidden;
  background: #fff;
}

.user-menu .menu_tit {
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  border-bottom: 1rpx solid #e9e3e3;
}

.user-menu .menu_top {
  text-align: left;
  margin-left: 20rpx;
}

.user-menu .item {
  float: left;
  width: 25%;
  height: 187.5rpx;
  text-align: center;
}

.user-menu .item .a {
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.user-menu .item.no-border {
  border-right: 0;
}

.user-menu .item.item-bottom {
  border-bottom: none;
}

.user-menu .icon,
.userinfo-mobile .icon {
  margin: 0 auto;
  display: block;
  height: 52.803rpx;
  width: 52.803rpx;
  margin-bottom: 16rpx;
}

.user-menu .txt {
  display: block;
  height: 24rpx;
  width: 100%;
  font-size: 24rpx;
  color: #333;
}

.cardlist {
  padding: 30rpx;
}

.cardlist .card {
  clear: both;
  width: 100%;
  height: 240rpx;
  padding: 20rpx;
  border: solid 1px #cccccc;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.cardlist .card:last-child {
  margin-bottom: 0;
}

.cardlist .card image {
  float: left;
  width: 200rpx;
  height: 200rpx;
  border: solid 1px #cccccc;
}

.cardlist .card .right {
  float: left;
  width: 400rpx;
  height: 200rpx;
  margin-left: 20rpx;
  position: relative;
}

.cardlist .card .right text {
  display: block;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.cardlist .card .btn {
  position: absolute;
  bottom: 0;
  width: 100%;
  clear: both;
  padding-top: 10rpx;
}

.cardlist .card .btn button,
.cardlist .card .btn navigator {
  float: left;
  width: 30%;
  margin-right: 2.5%;
  padding: 0;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background: #fff;
  font-size: 26rpx;
  color: #52a936;
  border: solid 2rpx #52a936;
  border-radius: 10rpx;
}

.addcardbtn {
  text-align: center;
  padding: 30rpx 0;
}

.addcardbtn image {
  width: 200rpx;
  height: 200rpx;
}